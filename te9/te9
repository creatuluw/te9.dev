#!/bin/bash

# ==============================================================================
# AI INSTRUCTIONS - READ THIS FIRST
# ==============================================================================
#
# To install te9.dev, run this ONE command:
#
#   curl -fsSL https://raw.githubusercontent.com/creatuluw/te9.dev/main/te9/te9 | bash install --llm
#
# Windows CMD:
#   te9 install --llm
#
# Windows PowerShell:
#   iwr -useb https://raw.githubusercontent.com/creatuluw/te9.dev/main/te9/te9 | bash install --llm
#
# The --llm flag handles EVERYTHING automatically:
#   - Initializes git repository (no prompts)
#   - Creates all directories
#   - Downloads all required files
#   - Initializes specs database
#   - Completes project setup
#
# SUCCESS INDICATOR: Look for "STATUS: READY_TO_USE" in output
#
# For more info: See AI_INSTRUCTIONS.md in the repository root
#
# ==============================================================================

# te9 - Unified te9.dev Management Script
# Works on Linux, macOS, and Windows (Git Bash)
# Usage: curl -fsSL https://github.com/creatuluw/te9.dev/te9/te9 | bash
# LLM mode: curl -fsSL https://github.com/creatuluw/te9.dev/te9/te9 | bash install --llm

set -e

# Configuration
REPO="creatuluw/te9.dev"
BRANCH="main"
RAW_URL="https://raw.githubusercontent.com/${REPO}/${BRANCH}"

# LLM mode flag (auto-confirm, auto-init, structured output)
LLM_MODE=false
AUTO_INIT=false

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m'

# Functions
log_info() { echo -e "${BLUE}â„¹${NC} $1"; }
log_success() { echo -e "${GREEN}âœ…${NC} $1"; }
log_warn() { echo -e "${YELLOW}âš ï¸${NC} $1"; }
log_error() { echo -e "${RED}âŒ${NC} $1"; }
log_cmd() { echo -e "${CYAN}âžœ${NC} $1"; }

# Detect platform
detect_platform() {
    case "$(uname -s)" in
        Linux*)     PLATFORM="linux";;
        Darwin*)    PLATFORM="macos";;
        MINGW*|MSYS*|CYGWIN*) PLATFORM="windows";;
        *)          PLATFORM="unknown";;
    esac
}

# Show help
show_help() {
    echo -e "${BOLD}te9 - te9.dev Management Script${NC}"
    echo ""
    echo -e "${BOLD}Usage:${NC}"
    echo "  curl -fsSL https://github.com/creatuluw/te9.dev/te9/te9 | bash [command] [options]"
    echo ""
    echo -e "${BOLD}Commands:${NC}"
    echo "  ${CYAN}install${NC}    Install te9.dev in current directory"
    echo "  ${CYAN}update${NC}     Update te9.dev to latest version"
    echo "  ${CYAN}status${NC}     Check installation status"
    echo "  ${CYAN}version${NC}    Show version information"
    echo "  ${CYAN}help${NC}       Show this help message"
    echo ""
    echo -e "${BOLD}Options:${NC}"
    echo "  ${CYAN}--llm${NC}      LLM-friendly mode (auto-confirm, auto-init, structured output)"
    echo "  ${CYAN}--auto-init${NC} Automatically initialize after install (no manual skill step)"
    echo ""
    echo -e "${BOLD}Examples:${NC}"
    echo "  curl -fsSL https://github.com/creatuluw/te9.dev/te9/te9 | bash install"
    echo "  curl -fsSL https://github.com/creatuluw/te9.dev/te9/te9 | bash install --llm"
    echo "  curl -fsSL https://github.com/creatuluw/te9.dev/te9/te9 | bash update"
    echo "  curl -fsSL https://github.com/creatuluw/te9.dev/te9/te9 | bash status"
    echo ""
    echo -e "${BOLD}More Info:${NC}"
    echo "  https://github.com/${REPO}"
}

# Show version
show_version() {
    echo "te9.dev v1.0.0"
    echo "Platform: $PLATFORM"
    echo "Repository: https://github.com/${REPO}"
}

# Check if in git repo
check_git_repo() {
    if ! git rev-parse --git-dir > /dev/null 2>&1; then
        log_warn "Not in a git repository"
        if [ "$LLM_MODE" = true ] || [ "$AUTO_INIT" = true ]; then
            log_info "Auto-initializing git repository (LLM mode)..."
            git init > /dev/null 2>&1
            log_success "Initialized git repository"
        else
            read -p "Run 'git init' first? (y/N): " -n 1 -r
            echo
            if [[ $REPLY =~ ^[Yy]$ ]]; then
                git init
                log_success "Initialized git repository"
            else
                log_info "Continuing anyway..."
            fi
        fi
    fi
}

# Check if te9.dev is installed
check_installed() {
    if [ ! -f "opencode.json" ] || [ ! -f "openmemory.md" ]; then
        log_error "te9.dev is not installed in this directory"
        log_info "To install te9.dev, run: curl -fsSL https://github.com/creatuluw/te9.dev/te9/te9 | bash install"
        exit 1
    fi
    log_success "Found te9.dev installation"
}

# Create directory structure
create_directories() {
    log_info "Creating directory structure..."

    mkdir -p .opencode/skill/daisyui
    mkdir -p .opencode/skill/spec-branch-commit
    mkdir -p .opencode/skill/spec-clarify
    mkdir -p .opencode/skill/spec-commit
    mkdir -p .opencode/skill/spec-execute
    mkdir -p .opencode/skill/spec-pr-create
    mkdir -p .opencode/skill/spec-pr-review
    mkdir -p .opencode/skill/spec-store
    mkdir -p .opencode/skill/spec-track
    mkdir -p .opencode/skill/te9-init
    mkdir -p .opencode/skill/te9-update
    mkdir -p .opencode/tool
    mkdir -p .opencode/prompts
    mkdir -p .opencode/plugins
    mkdir -p te9.dev/specs
    mkdir -p te9.dev/logs

    log_success "Created directory structure"
}

# Download file
download_file() {
    local url="$1"
    local dest="$2"

    log_info "Downloading: $(basename "$dest")"
    if curl -fsSL "$url" -o "$dest"; then
        log_success "Downloaded: $(basename "$dest")"
    else
        log_error "Failed to download: $(basename "$dest")"
        return 1
    fi
}

# Download AGENTS.md with special handling (prepend if exists)
download_agents_md() {
    local url="${RAW_URL}/AGENTS.md"
    local dest="AGENTS.md"

    if [ -f "$dest" ]; then
        log_info "AGENTS.md exists - checking for te9 instructions"

        # Backup existing file
        cp "$dest" "${dest}.backup"

        # Download new version to temp file
        local temp_file="${dest}.new"
        if curl -fsSL "$url" -o "$temp_file"; then
            # Check if te9 instructions are already present
            local new_header=$(head -1 "$temp_file")
            local existing_header=$(head -1 "$dest")

            if [ "$existing_header" = "$new_header" ]; then
                # Already has te9 instructions, just replace
                mv "$temp_file" "$dest"
                log_success "AGENTS.md updated (te9 version already present, replaced)"
            else
                # Prepend new content to existing
                cat "$temp_file" > "$dest"
                echo "" >> "$dest"
                echo "---" >> "$dest"
                echo "" >> "$dest"
                cat "${dest}.backup" >> "$dest"
                log_success "AGENTS.md updated (te9 version prepended)"
            fi

            # Clean up
            rm -f "$temp_file"
        else
            log_error "Failed to download AGENTS.md"
            return 1
        fi
    else
        # Just download normally if doesn't exist
        download_file "$url" "$dest"
    fi
}

# Download all files
download_files() {
    log_info "Downloading te9.dev files from GitHub..."
    log_cmd "Source: ${RAW_URL}"

    # Core files
    download_file "${RAW_URL}/opencode.json" "opencode.json"
    download_file "${RAW_URL}/openmemory.md" "openmemory.md"
    download_file "${RAW_URL}/README.md" "README.md"
    download_file "${RAW_URL}/te9.md" "te9.md"
    download_agents_md

    # OpenCode config (optional - may not exist yet)
    if curl -fsSL "${RAW_URL}/.opencode/package.json" -o /dev/null 2>&1; then
        download_file "${RAW_URL}/.opencode/package.json" ".opencode/package.json"
    else
        log_info "Creating OpenCode package.json locally..."
        cat > ".opencode/package.json" << 'EOF'
{
  "dependencies": {
    "@opencode-ai/plugin": "1.1.3"
  }
}
EOF
        log_success "Created OpenCode package.json"
    fi

    # Skills
    download_file "${RAW_URL}/.opencode/skill/daisyui/SKILL.md" ".opencode/skill/daisyui/SKILL.md"
    download_file "${RAW_URL}/.opencode/skill/spec-branch-commit/SKILL.md" ".opencode/skill/spec-branch-commit/SKILL.md"
    download_file "${RAW_URL}/.opencode/skill/spec-clarify/SKILL.md" ".opencode/skill/spec-clarify/SKILL.md"
    download_file "${RAW_URL}/.opencode/skill/spec-commit/SKILL.md" ".opencode/skill/spec-commit/SKILL.md"
    download_file "${RAW_URL}/.opencode/skill/spec-execute/SKILL.md" ".opencode/skill/spec-execute/SKILL.md"
    download_file "${RAW_URL}/.opencode/skill/spec-pr-create/SKILL.md" ".opencode/skill/spec-pr-create/SKILL.md"
    download_file "${RAW_URL}/.opencode/skill/spec-pr-review/SKILL.md" ".opencode/skill/spec-pr-review/SKILL.md"
    download_file "${RAW_URL}/.opencode/skill/spec-store/SKILL.md" ".opencode/skill/spec-store/SKILL.md"
    download_file "${RAW_URL}/.opencode/skill/spec-track/SKILL.md" ".opencode/skill/spec-track/SKILL.md"
    download_file "${RAW_URL}/.opencode/skill/te9-init/SKILL.md" ".opencode/skill/te9-init/SKILL.md"
    download_file "${RAW_URL}/.opencode/skill/te9-update/SKILL.md" ".opencode/skill/te9-update/SKILL.md"

    # Skill README
    download_file "${RAW_URL}/.opencode/skill/README.md" ".opencode/skill/README.md"

    # Tools
    download_file "${RAW_URL}/.opencode/tool/daisyui.ts" ".opencode/tool/daisyui.ts"
    download_file "${RAW_URL}/.opencode/tool/knowledge_graph.ts" ".opencode/tool/knowledge_graph.ts"
    download_file "${RAW_URL}/.opencode/tool/melt.ts" ".opencode/tool/melt.ts"
    download_file "${RAW_URL}/.opencode/tool/uikit.ts" ".opencode/tool/uikit.ts"
    download_file "${RAW_URL}/.opencode/tool/te9-update.ts" ".opencode/tool/te9-update.ts"

    # Create /te9 command directory and file
    mkdir -p ".opencode/commands"
    log_info "Creating /te9 command file..."
    cat > ".opencode/commands/te9.md" << 'EOF'
---
description: Start the te9.dev spec-driven development workflow
agent: coding
model: anthropic/claude-3-5-sonnet-20241022
subtask: true
---

# Starting te9.dev Workflow

You are now entering the te9.dev spec-driven development workflow. This is the ONLY way to use the te9 method. Follow the mandatory 6-step sequence:

## ðŸ“‹ MANDATORY WORKFLOW SEQUENCE

1. **spec-clarify** â†’ Gather requirements with questions (max 5)
2. **spec-store** â†’ Save spec to file system
3. **spec-execute** â†’ Implement and test
4. **spec-branch-commit** â†’ Create branch, commit and push (with approval)
5. **spec-pr-create** â†’ Create pull request for collaborative review
6. **spec-pr-review** â†’ Provide PR link for manual merge on GitHub

## ðŸš€ STEP 1: spec-clarify

Start by reading the user's request and following the spec-clarify skill:

### What You MUST Do:
1. Read user's initial prompt
2. Determine complexity level (Simple/Medium/Complex)
3. Ask clarification questions (MAXIMUM 5 TOTAL)
   - Simple: 0-1 question (confirm understanding)
   - Medium: 2-3 questions (clarify details)
   - Complex: 4-5 questions (deep dive)
4. Gather all answers
5. Prepare requirements summary
6. CONFIRM with user before proceeding to spec-store

### Question Guidelines:
- Always ask questions ONE BY ONE
- Include question number: "Question X/Y"
- Be targeted and specific
- Don't ask technical implementation details (save for execution)
- Maximum 5 questions total

After user confirmation, automatically proceed to **spec-store**.

## ðŸ“š REFERENCE FILES

For detailed instructions on each step, refer to:
- `.opencode/skill/spec-clarify/SKILL.md` - Requirements gathering
- `.opencode/skill/spec-store/SKILL.md` - Spec file creation
- `.opencode/skill/spec-execute/SKILL.md` - Implementation
- `.opencode/skill/spec-branch-commit/SKILL.md` - Branch commit & push
- `.opencode/skill/spec-pr-create/SKILL.md` - Pull request creation
- `.opencode/skill/spec-pr-review/SKILL.md` - Pull request review
- `AGENTS.md` - Complete workflow reference
- `.opencode/prompts/rules.md` - Mandatory workflow rules

## âš ï¸ CRITICAL RULES

- NEVER skip steps in the workflow
- ALWAYS ask for user approval before committing or pushing
- Log ALL changes to execution log
- Store in OpenMemory at each step
- Create knowledge graph facts for acceptance criteria
- Update spec status after each step

Ready to begin. What would you like to build?
EOF
        log_success "Created /te9 command file"

    # Prompts
    download_file "${RAW_URL}/.opencode/prompts/rules.md" ".opencode/prompts/rules.md"

    log_success "All files downloaded"
}

# Install dependencies
install_dependencies() {
    if [ -f ".opencode/package.json" ]; then
        log_info "Installing OpenCode dependencies..."
        if command -v bun >/dev/null 2>&1; then
            (cd .opencode && bun install >/dev/null 2>&1)
            log_success "Dependencies installed with bun"
        elif command -v npm >/dev/null 2>&1; then
            (cd .opencode && npm install >/dev/null 2>&1)
            log_success "Dependencies installed with npm"
        else
            log_info "Neither bun nor npm found - installing Bun..."
            if curl -fsSL https://bun.sh/install | bash; then
                log_success "Bun installed successfully"
                # Reload PATH or check again
                if command -v bun >/dev/null 2>&1; then
                    (cd .opencode && bun install >/dev/null 2>&1)
                    log_success "Dependencies installed with bun"
                else
                    log_warn "Bun installed but not found in PATH - plugin dependencies may not work"
                fi
            else
                log_error "Failed to install Bun - plugin dependencies may not work"
            fi
        fi
    else
        log_info "No OpenCode dependencies to install"
    fi
}

# Initialize specs database
init_specs() {
    if [ ! -f te9.dev/specs.json ]; then
        echo '{}' > te9.dev/specs.json
        log_success "Created: te9.dev/specs.json"
    fi
}

# Verify installation
verify_installation() {
    log_info "Verifying installation..."

    local required=(
        "opencode.json"
        "openmemory.md"
        "README.md"
        "te9.md"
        "AGENTS.md"
        ".opencode/package.json"
        ".opencode/skill/daisyui/SKILL.md"
        ".opencode/skill/spec-branch-commit/SKILL.md"
        ".opencode/skill/spec-clarify/SKILL.md"
        ".opencode/skill/spec-commit/SKILL.md"
        ".opencode/skill/spec-execute/SKILL.md"
        ".opencode/skill/spec-pr-create/SKILL.md"
        ".opencode/skill/spec-pr-review/SKILL.md"
        ".opencode/skill/spec-store/SKILL.md"
        ".opencode/skill/spec-track/SKILL.md"
        ".opencode/skill/te9-init/SKILL.md"
        ".opencode/skill/te9-update/SKILL.md"
        ".opencode/tool/te9-update.ts"
        ".opencode/commands/te9.md"
        ".opencode/prompts/rules.md"
    )

    local all_present=true
    for file in "${required[@]}"; do
        if [ -f "$file" ]; then
            log_success "$file"
        else
            log_error "$file"
            all_present=false
        fi
    done

    [ -d te9.dev/specs ] && log_success "te9.dev/specs/" || log_error "te9.dev/specs/"
    [ -d te9.dev/logs ] && log_success "te9.dev/logs/" || log_error "te9.dev/logs/"
    [ -d te9.dev/history ] && log_success "te9.dev/history/" || log_error "te9.dev/history/"
    [ -f te9.dev/specs.json ] && log_success "te9.dev/specs.json" || log_error "te9.dev/specs.json"

    if [ "$all_present" = true ]; then
        log_success "âœ… Installation verified!"
        if [ "$LLM_MODE" = true ]; then
            echo ""
            echo "=== INSTALLATION SUMMARY ==="
            echo "âœ… Core files: 5/5 installed"
            echo "âœ… Skills: 11/11 installed"
            echo "âœ… Tools: 5/5 installed"
            echo "âœ… Prompts: 1/1 installed"
            echo "âœ… Directories: created"
            echo "âœ… Specs database: initialized"
            echo ""
            echo "STATUS: READY_TO_USE"
        fi
    else
        log_error "âŒ Installation incomplete"
        if [ "$LLM_MODE" = true ]; then
            echo ""
            echo "=== INSTALLATION FAILED ==="
            echo "STATUS: INCOMPLETE"
        fi
        return 1
    fi
}

# Backup existing files
backup_files() {
    BACKUP_DIR=".te9-backup-$(date +%Y%m%d-%H%M%S)"
    log_info "Creating backup: $BACKUP_DIR"

    mkdir -p "$BACKUP_DIR"

    # Backup configs
    [ -f opencode.json ] && cp opencode.json "$BACKUP_DIR/"
    [ -f openmemory.md ] && cp openmemory.md "$BACKUP_DIR/"
    [ -f README.md ] && cp README.md "$BACKUP_DIR/"
    [ -f te9.md ] && cp te9.md "$BACKUP_DIR/"
    [ -f AGENTS.md ] && cp AGENTS.md "$BACKUP_DIR/"

    # Backup skills
    cp -r .opencode/skill "$BACKUP_DIR/"

    # Backup tools
    cp -r .opencode/tool "$BACKUP_DIR/"

    log_success "Backup created at: $BACKUP_DIR"
}

# Download file with backup
download_file_with_backup() {
    local url="$1"
    local dest="$2"

    # Backup existing file
    if [ -f "$dest" ]; then
        cp "$dest" "${dest}.old"
    fi

    log_info "Downloading: $(basename "$dest")"
    if curl -fsSL "$url" -o "$dest"; then
        log_success "Updated: $(basename "$dest")"
        rm -f "${dest}.old"
    else
        log_error "Failed to download: $(basename "$dest")"
        # Restore backup
        if [ -f "${dest}.old" ]; then
            mv "${dest}.old" "$dest"
            log_info "Restored backup"
        fi
        return 1
    fi
}

# Update files
update_files() {
    log_info "Updating te9.dev files..."
    log_cmd "Source: ${RAW_URL}"

    # Note: te9.dev folder and its contents are never touched to preserve user data

    # Core files
    download_file_with_backup "${RAW_URL}/opencode.json" "opencode.json"
    download_file_with_backup "${RAW_URL}/openmemory.md" "openmemory.md"
    download_file_with_backup "${RAW_URL}/README.md" "README.md"
    download_file_with_backup "${RAW_URL}/te9.md" "te9.md"
