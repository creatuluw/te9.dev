        log_success "Updated /te9 command file"

    # Prompts
    download_file_with_backup "${RAW_URL}/.opencode/prompts/rules.md" ".opencode/prompts/rules.md"

    log_success "All files updated"
}

# Verify update
verify_update() {
    log_info "Verifying update..."

    local required=(
        "opencode.json"
        "openmemory.md"
        ".opencode/package.json"
        ".opencode/skill/daisyui/SKILL.md"
        ".opencode/skill/spec-branch-commit/SKILL.md"
        ".opencode/skill/spec-clarify/SKILL.md"
        ".opencode/skill/spec-commit/SKILL.md"
        ".opencode/skill/spec-execute/SKILL.md"
        ".opencode/skill/spec-pr-create/SKILL.md"
        ".opencode/skill/spec-pr-review/SKILL.md"
        ".opencode/skill/spec-store/SKILL.md"
        ".opencode/skill/spec-track/SKILL.md"
        ".opencode/skill/te9-init/SKILL.md"
        ".opencode/skill/te9-update/SKILL.md"
        ".opencode/tool/te9-update.ts"
        ".opencode/commands/te9.md"
        ".opencode/prompts/rules.md"
    )

    local all_present=true
    for file in "${required[@]}"; do
        if [ -f "$file" ]; then
            log_success "$file"
        else
            log_error "$file"
            all_present=false
        fi
    done

    if [ "$all_present" = true ]; then
        log_success "âœ… Update verified!"
        if [ "$LLM_MODE" = true ]; then
            echo ""
            echo "=== UPDATE SUMMARY ==="
            echo "âœ… All files updated"
            echo "âœ… Backup created"
            echo "âœ… Dependencies installed"
            echo ""
            echo "STATUS: UPDATED"
        fi
    else
        log_error "âŒ Update incomplete"
        if [ "$LLM_MODE" = true ]; then
            echo ""
            echo "=== UPDATE FAILED ==="
            echo "STATUS: INCOMPLETE"
        fi
        return 1
    fi
}

# Check status
check_status() {
    log_info "Checking te9.dev status..."
    echo ""

    # Required files
    echo "=== Required Files ==="
    declare -a REQUIRED=(
        "opencode.json:Core configuration"
        "openmemory.md:Memory system rules"
        ".opencode/package.json:OpenCode dependencies"
        ".opencode/skill/daisyui/SKILL.md:DAISY UI components"
        ".opencode/skill/spec-branch-commit/SKILL.md:Branch and commit workflow"
        ".opencode/skill/spec-clarify/SKILL.md:Clarification"
        ".opencode/skill/spec-commit/SKILL.md:Commit workflow"
        ".opencode/skill/spec-execute/SKILL.md:Execution"
        ".opencode/skill/spec-pr-create/SKILL.md:Pull request creation"
        ".opencode/skill/spec-pr-review/SKILL.md:Pull request review"
        ".opencode/skill/spec-store/SKILL.md:Spec storage"
        ".opencode/skill/spec-track/SKILL.md:Progress tracking"
        ".opencode/skill/te9-init/SKILL.md:Initialization"
        ".opencode/commands/te9.md:te9 workflow command"
    )

    local all_present=true
    local total=0
    local present=0

    for item in "${REQUIRED[@]}"; do
        local file="${item%%:*}"
        local desc="${item##*:}"
        total=$((total + 1))

        if [ -f "$file" ]; then
            log_success "$file"
            present=$((present + 1))
        else
            log_error "$file"
            all_present=false
        fi
    done

    echo ""
    log_info "Required files: $present/$total present"

    # Optional tools
    echo ""
    echo "=== Technical Tools (Optional) ==="
    declare -a TOOLS=(
        ".opencode/tool/daisyui.ts:UI templates"
        ".opencode/tool/knowledge_graph.ts:Memory graph"
        ".opencode/tool/melt.ts:Svelte UI"
        ".opencode/tool/uikit.ts:UI generator"
    )

    local tools_total=0
    local tools_present=0

    for item in "${TOOLS[@]}"; do
        local file="${item%%:*}"
        local desc="${item##*:}"
        tools_total=$((tools_total + 1))

        if [ -f "$file" ]; then
            log_success "$file"
            tools_present=$((tools_present + 1))
        else
            echo "  âšª $file (not installed)"
        fi
    done

    echo ""
    log_info "Technical tools: $tools_present/$tools_total installed"

    # Project structure
    echo ""
    echo "=== Project Structure ==="

    if [ -d "te9.dev/specs" ]; then
        log_success "te9.dev/specs/"
        local spec_count=$(find te9.dev/specs -name "spec.md" 2>/dev/null | wc -l)
        if [ "$spec_count" -gt 0 ]; then
            echo "    ðŸ“Š $spec_count spec(s) found"
        fi
    else
        log_error "te9.dev/specs/"
    fi

    if [ -d "te9.dev/logs" ]; then
        log_success "te9.dev/logs/"
        local log_count=$(find te9.dev/logs -name "*.log" 2>/dev/null | wc -l)
        if [ "$log_count" -gt 0 ]; then
            echo "    ðŸ“Š $log_count log(s) found"
        fi
    else
        log_error "te9.dev/logs/"
    fi

    if [ -f "te9.dev/specs.json" ]; then
        log_success "te9.dev/specs.json"
    else
        echo "  âšª te9.dev/specs.json (will be created on first spec)"
    fi

    # Git status
    echo ""
    echo "=== Git Status ==="

    if git rev-parse --git-dir > /dev/null 2>&1; then
        log_success "Git repository"

        local uncommitted=$(git status --porcelain | wc -l)
        if [ "$uncommitted" -eq 0 ]; then
            echo "    ðŸ“Œ Working directory clean"
        else
            echo "    âš ï¸  $uncommitted uncommitted change(s)"
        fi

        local branch=$(git branch --show-current)
        echo "    ðŸŒ¿ Branch: $branch"
    else
        log_warn "Not a git repository"
    fi

    # Summary
    echo ""
    echo "=== Summary ==="
    echo ""
    log_info "For more information: https://github.com/${REPO}"
    echo ""

    if [ "$all_present" = true ]; then
        log_success "âœ… te9.dev is fully installed and ready to use!"
        echo ""
        log_info "Next steps:"
        echo "  1. Open your project in OpenCode or Zed"
        echo "  2. Run: skill('te9-init')"
        echo "  3. Start using te9.dev workflow!"
    else
        log_warn "âš ï¸  te9.dev installation incomplete"
        echo ""
        log_info "To fix installation, run:"
        echo "  curl -fsSL https://github.com/creatuluw/te9.dev/te9/te9 | bash install"
    fi
}

# Auto-initialize project (LLM-friendly, no manual skill step needed)
auto_init() {
    log_info "Auto-initializing te9.dev project structure..."

    # Create te9.dev/history directory
    mkdir -p te9.dev/history
    log_success "Created: te9.dev/history/"

    # Initialize OpenMemory with project info
    local project_dir=$(pwd)
    local project_name=$(basename "$project_dir")

    # Create a simple initialization marker
    cat > te9.dev/.initialized <<EOF
{
  "initialized_at": "$(date -u +"%Y-%m-%dT%H:%M:%SZ")",
  "project_name": "$project_name",
  "project_path": "$project_dir",
  "version": "1.0.0"
}
EOF

    log_success "Project initialized: $project_name"
    log_success "No manual skill('te9-init') needed!"
}

# Install command
cmd_install() {
    detect_platform

    if [ "$LLM_MODE" = true ]; then
        echo "=== TE9.DEV INSTALLATION ==="
        echo "Platform: $PLATFORM"
        echo "LLM Mode: enabled"
        echo ""
    else
        log_info "Installing te9.dev..."
        echo ""
    fi

    check_git_repo
    create_directories
    download_files
    install_dependencies
    init_specs
    verify_installation

    # Auto-initialize if in LLM mode or --auto-init flag
    if [ "$LLM_MODE" = true ] || [ "$AUTO_INIT" = true ]; then
        echo ""
        auto_init
    fi

    echo ""
    log_success "ðŸŽ‰ te9.dev installed successfully!"
    echo ""

    if [ "$LLM_MODE" = true ] || [ "$AUTO_INIT" = true ]; then
        log_info "te9.dev is now ready to use! No further initialization needed."
        echo ""
        echo "=== READY ==="
        log_info "You can start using the 6-step workflow immediately."
    else
        log_info "Next steps:"
        echo "  1. Open your project in OpenCode or Zed"
        echo "  2. Run: skill('te9-init')"
        echo "  3. Start using te9.dev workflow!"
    fi

    echo ""
    log_info "For help: https://github.com/${REPO}"
}

# Update command
cmd_update() {
    detect_platform
    check_installed

    if [ "$LLM_MODE" = true ]; then
        echo "=== TE9.DEV UPDATE ==="
        echo "Platform: $PLATFORM"
        echo "LLM Mode: enabled"
        echo ""
    else
        log_info "Updating te9.dev..."
        echo ""
    fi

    backup_files
    create_directories
    update_files
    install_dependencies
    verify_update

    echo ""
    log_success "ðŸŽ‰ te9.dev updated successfully!"
    echo ""

    if [ "$LLM_MODE" = true ]; then
        echo "=== UPDATE COMPLETE ==="
        echo "STATUS: UPDATED"
        echo ""
        log_info "te9.dev is updated and ready to use!"
    else
        log_info "Your te9.dev folder and all its contents are fully preserved (never overwritten during updates)."
        log_info "Backup created at: $BACKUP_DIR"
        echo ""
        log_info "Ready to continue using te9.dev!"
        echo ""
        log_info "For help: https://github.com/${REPO}"
    fi
}

# Status command
cmd_status() {
    detect_platform
    check_status
}

# Main
main() {
    # Parse arguments
    local command=""
    local args=()

    for arg in "$@"; do
        case "$arg" in
            --llm)
                LLM_MODE=true
                AUTO_INIT=true
                ;;
            --auto-init)
                AUTO_INIT=true
                ;;
            *)
                if [ -z "$command" ]; then
                    command="$arg"
                else
                    args+=("$arg")
                fi
                ;;
        esac
    done

    # Default to help if no command
    command="${command:-help}"

    case "$command" in
        install)
            cmd_install
            ;;
        update)
            cmd_update
            ;;
        status)
            cmd_status
            ;;
        version|--version|-v)
            detect_platform
            show_version
            ;;
        help|--help|-h)
            show_help
            ;;
        *)
            log_error "Unknown command: $command"
            echo ""
            show_help
            exit 1
            ;;
    esac
}

# Run main
main "$@"
